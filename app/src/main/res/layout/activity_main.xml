<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black">

    <ImageButton
        android:id="@+id/igbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#131111"
        android:onClick="onImageButtonClick"
        android:src="@drawable/maxi"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck,DuplicateClickableBoundsCheck" />

    <ImageButton
        android:id="@+id/igbtn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#131111"
        android:onClick="onImageButtonClick1"
        android:src="@drawable/minimize2"
        android:visibility="invisible"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv2"
        android:text="TextView"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/white"
        android:textAlignment="textEnd"
        android:textSize="40dp"
         />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttons"
        android:textColor="@color/white"
        android:text="0"
        android:textSize="40dp"
        android:textAlignment="textEnd"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="7dp"
         />

    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/bstart"
                android:layout_width="64dp"
                android:layout_height="70dp"
                android:layout_margin="8dp"
                android:backgroundTint="#2D2B2B"
                android:text="("
                android:textSize="16dp"
                android:visibility="invisible"
                app:cornerRadius="36dp"
                tools:visibility="visible" />

            <Button
                android:id="@+id/bclose"
                android:layout_width="64dp"
                android:layout_height="70dp"
                android:layout_margin="8dp"
                android:backgroundTint="#2D2B2B"
                android:text=")"
                android:textSize="20dp"
                android:visibility="invisible"
                app:cornerRadius="36dp"
                tools:visibility="visible" />

            <Button
                android:id="@+id/n"
                android:layout_width="64dp"
                android:layout_height="70dp"
                android:layout_margin="8dp"
                android:backgroundTint="#2D2B2B"
                android:text="n!"
                android:textSize="20dp"
                android:visibility="invisible"
                app:cornerRadius="36dp"
                tools:visibility="visible" />

            <Button
                android:id="@+id/sqrt"
                android:layout_width="64dp"
                android:layout_height="70dp"
                android:layout_margin="8dp"
                android:backgroundTint="#2D2B2B"
                android:text="√"
                android:textSize="20dp"
                android:visibility="invisible"
                app:cornerRadius="36dp"
                tools:visibility="visible" />

            <Button
                android:id="@+id/log"
                android:layout_width="68dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:backgroundTint="#2D2B2B"
                android:text="log"
                android:textSize="16dp"
                android:visibility="invisible"
                app:cornerRadius="36dp"
                tools:visibility="visible"  />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/ac"
                android:layout_width="64dp"
                android:layout_height="70dp"
                android:text="ac"
                android:textSize="20dp"
                android:layout_margin="8dp"
                app:cornerRadius="36dp"
                android:backgroundTint="#0E0D0D"
                />
            <Button
                android:id="@+id/modulo"
                android:layout_width="64dp"
                android:layout_height="70dp"
                android:text="%"
                android:textSize="20dp"
                android:layout_margin="8dp"
                app:cornerRadius="36dp"
                android:backgroundTint="#0E0D0D"
                />
            <Button
                android:id="@+id/clear"
                android:layout_width="64dp"
                android:layout_height="70dp"
                android:text="C"
                android:textSize="20dp"
                android:layout_margin="8dp"
                app:cornerRadius="36dp"
                android:backgroundTint="#0E0D0D"
                />
            <Button
                android:id="@+id/div"
                android:layout_width="64dp"
                android:layout_height="70dp"
                android:text="/"
                android:textSize="20dp"
                android:layout_margin="8dp"
                app:cornerRadius="36dp"
                android:backgroundTint="#0E0D0D"
                />

            <Button
                android:id="@+id/pi"
                android:layout_width="68dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:backgroundTint="#2D2B2B"
                android:text="π"
                android:textSize="16dp"
                android:visibility="invisible"
                app:cornerRadius="36dp"
                tools:visibility="visible" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/seven"
                android:layout_width="64dp"
                android:layout_height="70dp"
                android:text="7"
                android:textSize="20dp"
                android:layout_margin="8dp"
                app:cornerRadius="36dp"
                android:backgroundTint="#0E0D0D"
                />
            <Button
                android:id="@+id/eight"
                android:layout_width="64dp"
                android:layout_height="70dp"
                android:text="8"
                android:textSize="20dp"
                android:layout_margin="8dp"
                app:cornerRadius="36dp"
                android:backgroundTint="#0E0D0D"
                />
            <Button
                android:id="@+id/nine"
                android:layout_width="64dp"
                android:layout_height="70dp"
                android:text="9"
                android:textSize="20dp"
                android:layout_margin="8dp"
                app:cornerRadius="36dp"
                android:backgroundTint="#0E0D0D"
                />
            <Button
                android:id="@+id/multi"
                android:layout_width="64dp"
                android:layout_height="70dp"
                android:text="X"
                android:textSize="20dp"
                android:layout_margin="8dp"
                app:cornerRadius="36dp"
                android:backgroundTint="#0E0D0D"
                />

            <Button
                android:id="@+id/power"
                android:layout_width="68dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:backgroundTint="#2D2B2B"
                android:text="^"
                android:textSize="16dp"
                android:visibility="invisible"
                app:cornerRadius="36dp"
                tools:visibility="visible" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/four"
                android:layout_width="64dp"
                android:layout_height="70dp"
                android:text="4"
                android:textSize="20dp"
                android:layout_margin="8dp"
                app:cornerRadius="36dp"
                android:backgroundTint="#0E0D0D"
                />
            <Button
                android:id="@+id/five"
                android:layout_width="64dp"
                android:layout_height="70dp"
                android:text="5"
                android:textSize="20dp"
                android:layout_margin="8dp"
                app:cornerRadius="36dp"
                android:backgroundTint="#0E0D0D"
                />
            <Button
                android:id="@+id/six"
                android:layout_width="64dp"
                android:layout_height="70dp"
                android:text="6"
                android:textSize="20dp"
                android:layout_margin="8dp"
                app:cornerRadius="36dp"
                android:backgroundTint="#0E0D0D"
                />
            <Button
                android:id="@+id/minus"
                android:layout_width="64dp"
                android:layout_height="70dp"
                android:text="-"
                android:textSize="20dp"
                android:layout_margin="8dp"
                app:cornerRadius="36dp"
                android:backgroundTint="#0E0D0D"
                />

            <Button
                android:id="@+id/tan"
                android:layout_width="68dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:backgroundTint="#2D2B2B"
                android:text="tan"
                android:textSize="16dp"
                android:visibility="invisible"
                app:cornerRadius="36dp"
                tools:visibility="visible" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/three"
                android:layout_width="64dp"
                android:layout_height="70dp"
                android:text="3"
                android:textSize="20dp"
                android:layout_margin="8dp"
                app:cornerRadius="36dp"
                android:backgroundTint="#0E0D0D"
                />
            <Button
                android:id="@+id/two"
                android:layout_width="64dp"
                android:layout_height="70dp"
                android:text="2"
                android:textSize="20dp"
                android:layout_margin="8dp"
                app:cornerRadius="36dp"
                android:backgroundTint="#0E0D0D"
                />
            <Button
                android:id="@+id/one"
                android:layout_width="64dp"
                android:layout_height="70dp"
                android:text="1"
                android:textSize="20dp"
                android:layout_margin="8dp"
                app:cornerRadius="36dp"
                android:backgroundTint="#0E0D0D"
                />
            <Button
                android:id="@+id/pluse"
                android:layout_width="64dp"
                android:layout_height="70dp"
                android:text="+"
                android:textSize="20dp"
                android:layout_margin="8dp"
                app:cornerRadius="36dp"
                android:backgroundTint="#0E0D0D"
                />

            <Button
                android:id="@+id/cos"
                android:layout_width="68dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:backgroundTint="#2D2B2B"
                android:text="cos"
                android:textSize="16dp"
                android:visibility="invisible"
                app:cornerRadius="36dp"
                tools:visibility="visible" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            >
            <Button
                android:layout_width="64dp"
                android:layout_height="70dp"
                android:id="@+id/double_zero"
                android:text="00"
                android:textSize="20dp"
                android:layout_margin="8dp"
                app:cornerRadius="36dp"
                android:backgroundTint="#0E0D0D"
                />
            <Button
                android:id="@+id/zero"
                android:layout_width="64dp"
                android:layout_height="70dp"
                android:text="0"
                android:textSize="20dp"
                android:layout_margin="8dp"
                app:cornerRadius="36dp"
                android:backgroundTint="#0E0D0D"
                />
            <Button
                android:id="@+id/dot"
                android:layout_width="64dp"
                android:layout_height="70dp"
                android:text="."
                android:textSize="20dp"
                android:layout_margin="8dp"
                app:cornerRadius="36dp"
                android:backgroundTint="#0E0D0D"
                />
            <Button
                android:id="@+id/equals"
                android:layout_width="64dp"
                android:layout_height="70dp"
                android:text="="
                android:textSize="20dp"
                android:layout_margin="8dp"
                app:cornerRadius="36dp"
                android:backgroundTint="#0E0D0D"
                />

            <Button
                android:id="@+id/sin"
                android:layout_width="68dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:backgroundTint="#2D2B2B"
                android:text="sin"
                android:textSize="16dp"
                android:visibility="invisible"
                app:cornerRadius="36dp"
                tools:visibility="visible" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>